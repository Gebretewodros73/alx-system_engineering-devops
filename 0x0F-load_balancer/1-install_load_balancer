#!/usr/bin/env bash
#Bash script configures a new Ubuntu machine to match the task requirements
# Update the system
apt-get update

# Install HAProxy
apt-get -y install haproxy

# Configure HAProxy
CONFIG_FILE="/etc/haproxy/haproxy.cfg"

# Backup the original configuration file
cp "$CONFIG_FILE" "$CONFIG_FILE.bak"

# Create a new configuration file
echo "
frontend load_balancer
    bind *:80
    mode http
    default_backend webservers

backend webservers
    balance roundrobin
    server 209964-web-01 52.204.71.71
    server 209964-web-02 100.26.175.9
" | tee "$CONFIG_FILE" > /dev/null

# Enable HAProxy service to start on boot
systemctl enable haproxy

# Restart HAProxy service
systemctl start haproxy
